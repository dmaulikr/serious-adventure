{
    "routes": [
        {
            "route": "/horse/:start?/:limit?",
            "method": "GET",
            "handler": {
                "class": "CRUD.routes.horse",
                "method": "list"
            }
        },
        {
            "route": "/horse/count",
            "method": "GET",
            "handler": {
                "class": "CRUD.routes.horse",
                "method": "horseCount"
            }
        },
        {
            "route": "/horse",
            "method": "POST",
            "handler": {
                "class": "CRUD.routes.horse",
                "method": "post"
            }
        },
        {
            "route": "/horse/: id",
            "method": "GET",
            "handler": {
                "class": "CRUD.routes.horse",
                "method": "get"
            }
        },
        {
            "route": "/horse/: id",
            "method": "PUT",
            "handler": {
                "class": "CRUD.routes.horse",
                "method": "put"
            }
        },
        {
            "route": "/horse/: id",
            "method": "DELETE",
            "handler": {
                "class": "CRUD.routes.horse",
                "method": "delete"
            }
        }
    ]
}